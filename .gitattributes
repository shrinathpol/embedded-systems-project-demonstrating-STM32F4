# Auto detect text files and normalize line endings to LF
* text=auto

# C/C++ source files
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
README* text eol=lf

# Configuration files
*.ini text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.bin binary
*.elf binary
*.hex binary
*.o binary
*.a binary
